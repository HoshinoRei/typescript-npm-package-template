{
  "name": "typescript-npm-package-template",
  "version": "0.0.0",
  "description": "A NPM package template using TypeScript language",
  "keywords": [
    "TypeScript",
    "template"
  ],
  "homepage": "https://github.com/HoshinoRei/typescript-npm-template-package#readme",
  "bugs": {
    "url": "https://github.com/HoshinoRei/typescript-npm-package-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HoshinoRei/typescript-npm-package-template.git"
  },
  "license": "MIT",
  "author": "HoshinoRei",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "doc": "typedoc --plugin typedoc-plugin-markdown --plugin typedoc-github-wiki-theme",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "lint": "eslint --fix . --ext .ts",
    "lint:check": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "typedoc": "^0.26.3",
    "typedoc-github-wiki-theme": "^2.0.0",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.1.6"
  }
}

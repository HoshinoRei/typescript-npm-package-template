{
  "name": "typescript-npm-package-template",
  "version": "0.0.0",
  "description": "A NPM package template using TypeScript language",
  "keywords": [
    "TypeScript",
    "template"
  ],
  "homepage": "https://github.com/HoshinoRei/typescript-npm-template-package#readme",
  "bugs": {
    "url": "https://github.com/HoshinoRei/typescript-npm-package-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HoshinoRei/typescript-npm-package-template.git"
  },
  "license": "MIT",
  "author": "HoshinoRei",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc && vite build -w",
    "doc": "typedoc --plugin typedoc-plugin-markdown --plugin typedoc-github-wiki-theme",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "lint": "eslint --fix .",
    "lint:check": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^17.0.0",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "^2.4.5",
    "typedoc": "^0.28.3",
    "typedoc-github-wiki-theme": "^2.0.0",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.11.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.3.0"
  }
}
